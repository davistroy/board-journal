# Boardroom Journal Backend - Environment Configuration
# Copy this file to .env and update values for your environment
# NEVER commit .env to version control!

# ===================
# Server Configuration
# ===================
HOST=0.0.0.0
PORT=8080
ENVIRONMENT=development  # development, production, test

# ===================
# Database Configuration
# ===================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=boardroom_journal
DATABASE_USER=boardroom
DATABASE_PASSWORD=your_secure_password_here  # REQUIRED
DATABASE_POOL_SIZE=10

# ===================
# JWT Configuration
# ===================
# Generate a secure secret: openssl rand -base64 64
JWT_SECRET=your_secure_jwt_secret_here  # REQUIRED
JWT_ACCESS_TOKEN_EXPIRY_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRY_DAYS=30

# ===================
# Rate Limiting (per PRD Section 3D)
# ===================
RATE_LIMIT_ACCOUNT_CREATION_PER_HOUR=3
RATE_LIMIT_AUTH_ATTEMPTS_BEFORE_LOCKOUT=5
RATE_LIMIT_AUTH_LOCKOUT_MINUTES=15

# ===================
# Request Limits
# ===================
MAX_REQUEST_BODY_SIZE=10485760  # 10MB

# ===================
# Apple OAuth (Sign in with Apple)
# ===================
# Get these from Apple Developer Console
# APPLE_CLIENT_ID=
# APPLE_TEAM_ID=
# APPLE_KEY_ID=
# APPLE_PRIVATE_KEY=  # Base64 encoded .p8 file content

# ===================
# Google OAuth
# ===================
# Get these from Google Cloud Console
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# ===================
# AI Services
# ===================
# Claude API (Anthropic)
# CLAUDE_API_KEY=

# Deepgram API (Speech-to-text)
# DEEPGRAM_API_KEY=
